  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Disable TRACE</web-resource-name>
      <url-pattern>/</url-pattern>
      <http-method>TRACE</http-method>
    </web-resource-collection>
    <auth-constraint />
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>istore</web-resource-name>
      <url-pattern>*.*</url-pattern>
      <url-pattern>/</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>ADMIN</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>CONFIDENTIAL</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>UpdaterServlet</web-resource-name>
      <url-pattern>/updater/*</url-pattern>
    </web-resource-collection>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>InstallerServlet</web-resource-name>
      <url-pattern>/install/*</url-pattern>
    </web-resource-collection>
  </security-constraint>

  <login-config>
    <auth-method>BASIC</auth-method>
    <realm-name>xservicesLoginModule</realm-name>
